import java.util.Scanner;

class Main {
  public static void main(String[] args) {
    Scanner stdIn = new Scanner(System.in);
    System.out.println("1부터 x까지의 합을 구하자.");
    System.out.print("x의 값 : ");
    int x = stdIn.nextInt();
    int sum = 0;
    for (int i = 0; i<= x; i ++)
      sum += i;


    System.out.println("1부터"+x+"까지의 합은"+sum+"입니다. ");
  }
}
